<h2 class="text-center">Создание книги</h2>
			<form class="edit-form" onsubmit={{action "submitForm"}}>
				<div class="form-group row">
					<label for="inputTitle" class="col-sm-2 col-form-label text-right">Название</label>
					<div class="col-sm-10">
						{{input type="text" class="form-control form-control-lg" id="inputTitle" value=name placeholder="Полное название книги"}}
					</div>
				</div>
				<div class="form-group row">
					<label for="inputAuthor" class="col-sm-2 col-form-label text-right">Автор</label>
					<div class="col-sm-10">
						{{input type="text" class="form-control form-control-lg" id="inputAuthor" value=author placeholder="Фамилия И.О. автора"}}
					</div>
				</div>
				<div class="form-group row">
					<label for="inputPagesCount" class="col-sm-2 col-form-label text-right">Объем</label>
					<div class="col-sm-10">
						{{input type="number" class="form-control form-control-lg" value=pages id="inputPagesCount" placeholder="Количество страниц книги"}}
					</div>
				</div>
				<div class="form-group row">
					<label for="inputDescriptionURL" class="col-sm-2 col-form-label text-right">Описание</label>
					<div class="col-sm-10">
						{{input type="url" class="form-control form-control-lg" value=description id="inputDescriptionURL" placeholder="Ссылка на сайт с описанием книги"}}
					</div>
				</div>
				<div class="form-group row">
					<label for="customFile" class="col-sm-2 col-form-label text-right">Обложка</label>
						<div class="col-sm-10">
							{{input type="url" class="form-control form-control-lg"  placeholder="введите url картинки в интернете" value=photo id="customFile" lang="ru"}}
						</div>
					<img src ={{photo}} class="edit-img" />
				</div>

				<div class="form-group row">
					<label for="inputTags" class="col-sm-2 col-form-label text-right">Теги</label>
					<div class="col-sm-10">
						{{input type="text" class="form-control" value=tags id="inputPatronymic" placeholder="#Теги через запятую"}}
					</div>
				</div>
				<div class="form-group row">
					<div class="col-12 text-right">
						<button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
						<button type="submit" class="btn btn-outline-secondary btn-lg">Отмена</button>
					</div>
				</div>
			</form>